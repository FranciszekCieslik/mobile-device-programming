<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/singleWord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/subjectNameTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Przedmiot"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/taskListNameTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Lista nr"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gradeTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Ocena: 5.0"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/taskCountTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Liczba zadaÅ„: 10"
        android:textSize="12sp" />

</LinearLayout>